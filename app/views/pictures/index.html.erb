<!doctype html>
<html lang="en">
<p id="notice"><%= notice %></p>
<head>
</head>

  <style media="screen">
      img {
        width: 100%;
        height: 90%;
      }
  </style>

  <body>
    <div class="container-fluid">
      <% @pictures.reverse.each_slice(3) do |pictures| %>
        <div class="row">
          <% pictures.each do |picture| %>
            <div class="col-md-4">
              <%= link_to image_tag(picture.image), picture %><br>
            </div>
          <%end%>
        </div>
      <%end%>
    </div>
  </body>
</html>
