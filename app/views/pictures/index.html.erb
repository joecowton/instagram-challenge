<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
  </thead>
  <style media="screen">
    img {
      width: 200px;
      height: auto;
    }
</style>

  <tbody>

    <% @pictures.each do |picture| %>

    <tr>
      <h4><%= link_to picture.id, picture %>
        Submitted <%= time_ago_in_words(picture.created_at) %>
        by <%= picture.user.email %>
      </h4>

      <%= link_to image_tag(picture.image), picture %>
      <%= link_to like_picture_path(picture), method: :put do %>
        Upvote
        <%= picture.get_upvotes.size %>
      <% end %>

      <%= link_to dislike_picture_path(picture), method: :put do %>
        Downvote
        <%= picture.get_downvotes.size %>
      <% end %>
    </tr>
    <% end %>

    <% if user_signed_in? %>
      <li>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      </li>
    <% else %>
      <li>
        <%= link_to('Login', new_user_session_path)  %>
      </li>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_user_picture_path(current_user) %>
