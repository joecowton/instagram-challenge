<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
  </thead>
  <style media="screen">
    img {
      width: 200px;
      height: auto;
    }
</style>

  <tbody>

    <% @pictures.reverse.each do |picture| %>

    <tr>
      <h4>
          <%= picture.user.email %><br>
          <%= time_ago_in_words(picture.created_at)%> ago
      </h4>

      <%= link_to image_tag(picture.image), like_picture_path(picture), method: :put %><br>
      <%= link_to 'Destroy', [current_user, picture], confirm: 'Are you sure?', method: :delete %></td>
      <%= link_to like_picture_path(picture), method: :put do %>
        Likes
      <%= picture.count_votes_up %>
      <% end %>
      <%= link_to dislike_picture_path(picture), method: :put do %>
        Unlike
      <% end %>
        <%= link_to 'Add Comment', new_picture_comment_path(picture) %><br>
        <% picture.comments.each do |comment| %>
          <%= comment.user.email %>
        <%= comment.comment.slice(0,50) %>
        <% end %>



    </tr>
    <% end %>

    <% if user_signed_in? %>
      <li>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      </li>
    <% else %>
      <li>
        <%= link_to('Login', new_user_session_path)  %>
      </li>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_user_picture_path(current_user) %>
